<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_stockroom_vendor_tree" model="ir.ui.view">
        <field name="name">stockroom.vendor.tree</field>
        <field name="model">stockroom.vendor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_stockroom_vendor_form" model="ir.ui.view">
        <field name="name">stockroom.vendor.form</field>
        <field name="model">stockroom.vendor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions for Vendors -->
    <record id="action_stockroom_vendor" model="ir.actions.act_window">
        <field name="name">Vendors</field>
        <field name="res_model">stockroom.vendor</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new vendor.
            </p>
        </field>
    </record>

</odoo>
