<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_stockroom_product_tree" model="ir.ui.view">
        <field name="name">stockroom.product.tree</field>
        <field name="model">stockroom.product</field>
        <field name="arch" type="xml">
            <list>
                <field name="outlet_id"/>
                <field name="name"/>
                <field name="brand"/>
                <field name="location_id"/>
                <field name="uom"/>
                <field name="reorder_level"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_stockroom_product_form" model="ir.ui.view">
        <field name="name">stockroom.product.form</field>
        <field name="model">stockroom.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="outlet_id"/>
                        <field name="name"/>
                        <field name="brand"/>
                        <field name="location_id"/>
                        <field name="uom"/>
                        <field name="reorder_level"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions for Products -->
    <record id="action_stockroom_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">stockroom.product</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new product.
            </p>
        </field>
    </record>

</odoo>
