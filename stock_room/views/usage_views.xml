<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_inventory_use_form" model="ir.ui.view">
    <field name="name">stockroom.usage.form</field>
    <field name="model">stockroom.usage</field>
    <field name="arch" type="xml">
      <form string="Use Products">
        <sheet>
          <group>
            <field name="outlet_id"/>
            <field name="date"/>
          </group>

          <group>
            <field name="line_ids">
              <list editable="bottom">
                <field name="product_id"/>
                <!-- inventory_id is on the right of product in the tree -->
                <field name="inventory_id" />
                <field name="available_qty" readonly="1"/>
                <field name="quantity_used"/>
              </list>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_inventory_use_tree" model="ir.ui.view">
    <field name="name">stockroom.usage.tree</field>
    <field name="model">stockroom.usage</field>
    <field name="arch" type="xml">
      <list>
        <field name="outlet_id"/>
        <field name="date"/>
      </list>
    </field>
  </record>

  <record id="action_inventory_use" model="ir.actions.act_window">
    <field name="name">Use</field>
    <field name="res_model">stockroom.usage</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>