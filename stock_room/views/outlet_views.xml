<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_stockroom_outlet_tree" model="ir.ui.view">
        <field name="name">stockroom.outlet.tree</field>
        <field name="model">stockroom.outlet</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_stockroom_outlet_form" model="ir.ui.view">
        <field name="name">stockroom.outlet.form</field>
        <field name="model">stockroom.outlet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions for Outlets -->
    <record id="action_stockroom_outlet" model="ir.actions.act_window">
        <field name="name">Outlets</field>
        <field name="res_model">stockroom.outlet</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new outlet.
            </p>
        </field>
    </record>

</odoo>
